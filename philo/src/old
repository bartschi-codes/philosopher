#include "philo.h"

static t_philo_data	*info_init(void)
{
	t_philo_data	*data;
	data = (t_philo_data *)malloc(sizeof(t_philo_data));
	if (!data)
		return (NULL);
	data->num_philo = -1;
	data->die_time = -1;
	data->eat_time = -1;
	data->sleep_time = -1;
	data->num_eat = -1;
	return (data);
}

static t_philosopher	**create_philosophers(t_philo_data *info, t_philosopher **philos)
{
	int	z;

	z = 0;
	philos = (t_philosopher **)malloc(sizeof(t_philosopher *) * info->num_philo);
	if (!philos)
		return (NULL);
	philos[info->num_philo] = NULL;
	while (z < info->num_philo)
	{
		philos[z] = (t_philosopher *)malloc(sizeof(t_philosopher));
		if (!philos[z])
			return (NULL);
		z++;
	}
	return (philos);
}

static t_philosopher	**init_philosophers(t_philo_data **info, t_philosopher **philos)
{
	//struct timeval	start;
	t_philosopher		*p;
	int		z;

	z = 0;
	p = *philos;
	while (p)
	{
		p->philosopher_nbr = z + 1;
		p->times_eaten = 0;
		p->info = *info;
		p++;
	}
	return (philos);
}

void	initer(int argc, char *argv[], t_philo_data **info, \
				t_philosopher **philos)
{
	if (!((*info) = info_init()))
		error_h("malloc error: info", *info, *philos);
	if (!((*info) = parse_input(argc, argv, (*info))))
		error_h("wrong input: num_philo die_time eat_time sleep_time [num_eat]"\
			, *info, *philos);
	if (!((philos) = create_philosophers(*info, (philos))))
		error_h("malloc error: philosophers", *info, *philos);
	if (!((philos) = init_philosophers((info), (philos))))
		error_h("init error: philosophers", *info, *philos);
}
